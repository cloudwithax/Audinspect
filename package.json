{
  "name": "audinspect",
  "version": "1.2.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "package": "npm run build && electron-builder && node scripts/clean-build.js",
    "package:win_x64": "npm run build && electron-builder --win --x64 && node scripts/clean-build.js",
    "package:win_arm": "npm run build && electron-builder --win --arm64 && node scripts/clean-build.js",
    "package:mac_x64": "npm run build && electron-builder --mac --x64 && node scripts/clean-build.js",
    "package:mac_arm": "npm run build && electron-builder --mac --arm64 && node scripts/clean-build.js",
    "package:linux": "npm run build && electron-builder --linux --x64 && node scripts/clean-build.js",
    "package:all": "npm run build && electron-builder -mwl && node scripts/clean-build.js",
    "postinstall": "electron-rebuild && electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.404oops.audinspect",
    "icon": "resources/icon.png",
    "publish": null,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "files": [
      "dist/*.html",
      "dist/assets/*",
      "electron/*",
      "package.json",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/__tests__/**",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/example/**",
      "!**/node_modules/**/examples/**"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg",
        "!**/node_modules/ffprobe-static/bin/darwin/**",
        "!**/node_modules/ffprobe-static/bin/linux/**"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg.exe",
        "!**/node_modules/ffprobe-static/bin/win32/**",
        "!**/node_modules/ffprobe-static/bin/linux/**"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg.exe",
        "!**/node_modules/ffprobe-static/bin/win32/**",
        "!**/node_modules/ffprobe-static/bin/darwin/**"
      ]
    },
    "compression": "maximum"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "@electron/rebuild": "^3.7.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "classic-level": "^3.0.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "level": "^10.0.0",
    "level-supports": "^6.0.0",
    "level-transcoder": "^1.0.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-window": "^2.2.3",
    "wavesurfer.js": "^7.0.0",
    "zustand": "^5.0.8"
  }
}
