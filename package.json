{
  "name": "audinspect",
  "version": "1.0.1",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "package": "npm run build && electron-builder && node scripts/clean-build.js",
    "package:all": "npm run build && electron-builder -mwl && node scripts/clean-build.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.404oops.audinspect",
    "icon": "resources/icon.png",
    "publish": null,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "files": [
      "dist/*.html",
      "dist/assets/*",
      "electron/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg.exe"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "files": [
        "!**/node_modules/ffmpeg-static/ffmpeg.exe"
      ]
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "ffmpeg-static": "^5.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "wavesurfer.js": "^7.0.0"
  }
}